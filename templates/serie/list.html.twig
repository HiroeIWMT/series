{% extends 'base.html.twig' %}

{% block body %}
 <section>
     {% for serie in series %}
     <article>
         <a href="{{ path('app_details', {'id':serie.id})}}"
            title="View serie's details |{{ serie.seasons|length }}seasons">
             <img src="{{ asset('img/posters/series/'~serie.poster ) }}" alt="{{ serie.name }}">
         </a>
     </article>
     {% endfor %}
 </section>
{% endblock %}

{% block title %}
The best Series
{% endblock %}

